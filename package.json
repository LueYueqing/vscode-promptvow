{
  "name": "promptvow",
  "displayName": "PromptVow - AI Prompt Manager",
  "description": "智能管理AI编程提示词，提升编程效率",
  "version": "0.1.20",
  "icon": "assets/icons/prompt.png",
  "homepage": "https://promptvow.com",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "promptvow.showPromptPanel",
        "title": "Show Prompt Panel",
        "icon": "$(list-tree)"
      },
      {
        "command": "promptvow.insertPrompt",
        "title": "Insert Prompt",
        "icon": "$(insert)"
      },
      {
        "command": "promptvow.searchPrompts",
        "title": "Search Prompts",
        "icon": "$(search)"
      },
      {
        "command": "promptvow.saveSelectionAsPrompt",
        "title": "Save Selection as Prompt"
      },
      {
        "command": "promptvow.refreshPrompts",
        "title": "Refresh Prompts",
        "icon": "$(refresh)"
      },
      {
        "command": "promptvow.openPromptEditor",
        "title": "Open Prompt Editor"
      },
      {
        "command": "promptvow.copyPrompt",
        "title": "Copy Prompt",
        "icon": "$(copy)"
      },
      {
        "command": "promptvow.setAsDefaultProject",
        "title": "Set as Default Project"
      },
      {
        "command": "promptvow.authenticate",
        "title": "Authenticate with PromptVow"
      },
      {
        "command": "promptvow.selectProject",
        "title": "Select Project",
        "icon": "$(database)"
      },
      {
        "command": "promptvow.completeTask",
        "title": "Complete Task",
        "icon": "$(check-all)"
      },
      {
        "command": "promptvow.addPrompt",
        "title": "Add Prompt",
        "icon": "$(add)"
      },
      {
        "command": "promptvow.handleSelectProjectClick",
        "title": "Select Project"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "promptvow-container",
          "title": "PromptVow",
          "icon": "assets/icons/prompt.svg"
        }
      ]
    },
    "views": {
      "promptvow-container": [
        {
          "type": "webview",
          "id": "promptvow.activeProject",
          "name": "Active Project"
        },
        {
          "type": "webview",
          "id": "promptvow.library",
          "name": "Prompts Library"
        }
      ]
    },
    "viewsWelcome": [],
    "keybindings": [
      {
        "command": "promptvow.searchPrompts",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p",
        "when": "!inQuickOpen"
      },
      {
        "command": "promptvow.insertPrompt",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "promptvow.addPrompt",
          "when": "view == promptvow.prompts",
          "group": "navigation"
        },
        {
          "command": "promptvow.refreshPrompts",
          "when": "view == promptvow.prompts",
          "group": "navigation"
        },
        {
          "command": "promptvow.refreshPrompts",
          "when": "view == promptvow.activeProject || view == promptvow.library",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "promptvow.saveSelectionAsPrompt",
          "when": "editorHasSelection",
          "group": "promptvow"
        }
      ],
      "commandPalette": [
        {
          "command": "promptvow.insertPrompt",
          "when": "editorFocus"
        },
        {
          "command": "promptvow.saveSelectionAsPrompt",
          "when": "editorHasSelection"
        }
      ],
      "view/item/context": [
        {
          "command": "promptvow.copyPrompt",
          "when": "view == promptvow.library && viewItem == prompt",
          "group": "promptvow@1"
        },
        {
          "command": "promptvow.completeTask",
          "when": "view == promptvow.library && viewItem == prompt",
          "group": "promptvow@2"
        }
      ]
    }
  },
  "configuration": {
    "title": "PromptVow",
    "properties": {
      "promptvow.apiUrl": {
        "type": "string",
        "default": "https://promptvow.com",
        "description": "PromptVow API 地址"
      },
      "promptvow.apiKey": {
        "type": "string",
        "default": "",
        "description": "API 密钥（从 PromptVow 网站获取）"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "version:patch": "npm version patch",
    "package": "vsce package",
    "publish:vsce": "powershell -Command \"$env:VSCE_PAT=(Select-String -Path '../../.env.local' -Pattern 'VISUAL_STUDIO_TOKEN=(.*)' | ForEach-Object { $_.Matches.Groups[1].Value }).Trim(); vsce publish --noVerify\"",
    "publish:ovsx": "powershell -Command \"$env:OVSX_PAT=(Select-String -Path '../../.env.local' -Pattern 'OVSXAT=(.*)' | ForEach-Object { $_.Matches.Groups[1].Value }).Trim(); ovsx publish\"",
    "publish:github": "powershell -ExecutionPolicy Bypass -File ./scripts/publish-github-release.ps1",
    "publish:github:pre": "powershell -ExecutionPolicy Bypass -File ./scripts/publish-github-release.ps1 -PreRelease",
    "publish:all": "npm run publish:vsce && npm run publish:ovsx && npm run publish:github"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "typescript": "^5.1.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LueYueqing/vscode-promptvow.git"
  },
  "publisher": "promptvow"
}
